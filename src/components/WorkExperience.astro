---
import { workExperienceContent } from "../data/data.json";
import SectionTitle from "./SectionTitle.astro";
import Animate from "./Animat.astro"
---

<section id="work">
  <ul class="list-container">
    {
      workExperienceContent.jobs.map((job, index) => {
        return(
          <Animate delay={2*index+'00'} class="work-item" animationName="fadeIn-from-left">
            <li class="h-event" itemscope itemtype="https://schema.org/Organization">
              <img class="job-icon" src={job.icon} alt={`logo of the ${job.company} company`} itemprop="logo" />
              <h2 itemprop="name">{job.company}</h2>
               <link itemprop="url" href={job.url} />
              <div itemprop="employee" itemscope itemtype="https://schema.org/EmployeeRole">
                <strong itemprop="roleName">{job.position}</strong>
                (<time ><span itemprop="startDate">{job.year.split('-')[0]}</span>-<span itemprop="endtDate">{job.year.split('-')[1]}</span></time>)
                <ul class="desc-list">
                  {job.desc.map((item) => (
                    <li class="desc-item" itemprop="description">{item}</li>
                  ))}
                </ul>
              </div>
            </li>
          </Animate>
        )
      })
    }
  </ul>
  <SectionTitle text="Skills" color="var(--orange-color)" hrefLink="#skills" />
  <div class="line"></div>
</section>




<style>
  #work {
    position: relative;
    display: block;
    margin: auto;
  }
  .work-item h2 {
  margin-bottom: 1rem; /* Adds space below the position title */
}

  .list-container {
    all: unset;
    flex: 1;
    display: flex;
    justify-content: space-around;
    max-width: 92%;
    list-style-type: none;
  }
  
  .work-item{
    display: flex;
    flex-direction: column;
    min-height: 25vh;
    overflow: hidden;
    position: relative;
    border-radius: 0.5rem;
    padding: 2rem;
    font-size: 1.2rem;
    line-height: 1.5rem;
    /* Colorful border using a pseudo-element */
  }
  .work-item::before {
    display: none !important;
  }
  .work-item > * {
    position: relative;
    z-index: 1;
  }

  .job-icon {
    width: 4rem;
    position: absolute;
    right: 0;
  }

  .desc-list {
    padding: 0;
    line-height: 1.5rem;
    font-size: 1rem;
    padding-left: 2ch;
    margin-top: 1rem;
  }
  .desc-list li{
    margin-bottom: .5rem;
  }
  .desc-list li::marker{
    content: 'â–¸ ';
    color: var(--orange-color)
  }
  .h-event {
    border: 4px solid;
    border-image: linear-gradient(90deg, #f55, #88f, #0fa, #ff0, #f55) 1;
    background-clip: padding-box;
    box-shadow: 0 0 12px 2px rgba(255,255,255,0.08);
    background-color: rgba(34,34,34,0.1); /* 90% transparent background */
    padding: 2rem;
    position: relative;
    min-height: 25vh;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    font-size: 1.2rem;
    line-height: 1.5rem;
  }
  /* --------------------------------------------------------------------          Responsive         ------------------------------------------------------------------ */
  /* ... existing styles ... */

  /* Responsive styles */
  @media (max-width: 576px) {
    .list-container {
      flex-direction: column;
      align-items: center;
    }

    .work-item {
      width: 70%;
      margin-bottom: 2rem;
    }
    .work-item h2{
      font-size: 1.7rem;
      margin-right: 1rem;
    }
    .title {
      font-size: 3rem;
    }
  }

  @media (min-width: 577px) and (max-width: 768px) {
    .list-container {
      flex-wrap: wrap;
    }

    .work-item {
      width: 60%;
      margin-bottom: 2rem;
    }
  }

  @media (min-width: 769px) and (max-width: 992px) {
    .list-container {
      flex-wrap: wrap;
    }

    .work-item {
      width: 32%;
      margin-bottom: 2rem;
    }
  }

  /* ... existing styles ... */
</style>
